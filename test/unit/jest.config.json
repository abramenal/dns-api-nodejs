{
  "preset": "ts-jest",
  "testEnvironment": "node",

  "coverageProvider": "v8",
  "coverageReporters": ["text", "json-summary"],
  "coverageDirectory": "coverage",
  "rootDir": "../../src",
  "collectCoverageFrom": [
    "<rootDir>/**/*.ts",
    "!<rootDir>/domain/**/index.ts",
    "!<rootDir>/interfaces/routes/*.ts",
    "!<rootDir>/infrastructure/**/*.ts",
    "!<rootDir>/index.ts",
    "!<rootDir>/types/*.ts",
    "!<rootDir>/**/node_modules/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "setupFiles": ["<rootDir>/../test/unit/jest.setup.ts"],
  "clearMocks": true
}

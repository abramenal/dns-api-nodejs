{
  "preset": "ts-jest",
  "testEnvironment": "node",

  "coverageProvider": "v8",
  "coverageReporters": ["text", "json-summary"],
  "coverageDirectory": "coverage",
  "rootDir": "../../",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/domain/**/index.ts",
    "!<rootDir>/src/interfaces/routes/*.ts",
    "!<rootDir>/src/infrastructure/**/*.ts",
    "!<rootDir>/src/index.ts",
    "!<rootDir>/src/types/*.ts",
    "!<rootDir>/**/node_modules/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "setupFiles": ["<rootDir>/test/unit/jest.setup.ts"],
  "clearMocks": true
}
